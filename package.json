{
  "author": "Ethan Glover",
  "devDependencies": {
    "@ethang/eslint-config": "^21.7.3",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "typescript-eslint": "^8.29.1"
  },
  "license": "ISC",
  "name": "ethang-monorepo",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@heroui/shared-utils",
      "@prisma/client",
      "@swc/core",
      "esbuild",
      "msw",
      "scrollmirror",
      "sharp",
      "workerd",
      "yarn"
    ],
    "overrides": {
      "tailwind-merge": "<3",
      "tailwindcss": "<4"
    }
  },
  "scripts": {
    "all": "pnpm approve-builds && pnpm i && pnpm deps && pnpm -r cf-typegen && pnpm build && pnpm test && pnpm lint && pnpm prune",
