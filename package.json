{
  "name": "ethang-monorepo",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "all": "pnpm i && pnpm deps && pnpm test && pnpm lint && pnpm build",
    "deps": "pnpm up -r -i --latest && pnpm --filter eslint-config build",
    "lint": "pnpm -r lint",
    "build": "pnpm -r build",
    "test": "pnpm -r test"
  },
  "author": "Ethan Glover",
  "license": "ISC",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "devDependencies": {
    "@ethang/eslint-config": "^21.2.1",
    "eslint": "^9.20.1",
    "typescript-eslint": "^8.24.1"
  }
}
