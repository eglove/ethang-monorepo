{
  "name": "ethang-angular",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "pnpm run build && wrangler pages dev dist/cloudflare --compatibility-date=2024-12-05",
    "build": "ng build && pnpm run process",
    "watch": "ng build --watch --configuration development",
    "serve:ssr:ethang-angular": "node dist/ethang-angular/server/server.mjs",
    "process": "node ./tools/copy-files.mjs",
    "deploy": "pnpm run build && wrangler pages deploy dist/cloudflare",
    "lint": "prettier src --write && eslint src --fix"
  },
  "engines": {
    "node": ">=22"
  },
  "browserslist": [
    "defaults and fully supports es6-module",
    "maintained node versions"
  ],
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.1",
    "@angular/common": "^19.1.1",
    "@angular/compiler": "^19.1.1",
    "@angular/core": "^19.1.1",
    "@angular/forms": "^19.1.1",
    "@angular/platform-browser": "^19.1.1",
    "@angular/platform-browser-dynamic": "^19.1.1",
    "@angular/platform-server": "^19.1.1",
    "@angular/router": "^19.1.1",
    "@angular/service-worker": "^19.1.1",
    "@angular/ssr": "^19.1.2",
    "@ethang/toolbelt": "workspace:^",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "lodash": "^4.17.21",
    "lucide-angular": "^0.473.0",
    "ms": "^2.1.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.2",
    "@angular/cli": "^19.1.2",
    "@angular/compiler-cli": "^19.1.1",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@ethang/eslint-config": "workspace:^",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jasmine": "~5.1.0",
    "@types/lodash": "^4.17.14",
    "@types/ms": "^0.7.34",
    "@types/node": "^18.18.0",
    "@types/uuid": "^10.0.0",
    "angular-eslint": "19.0.2",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.23",
    "eslint": "^9.18.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "8.20.0",
    "wrangler": "^3.103.2",
    "xhr2": "^0.2.1"
  }
}
