generator client {
  provider               = "prisma-client"
  output                 = "../generated/prisma"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
  moduleFormat           = "esm"
  runtime                = "cloudflare"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id          String  @id @default(uuid(7))
  code        String  @unique
  description String
  title       String  @unique
  publicUrl   String? @unique

  techs Tech[]
}

model Tech {
  id   String @id @default(uuid(7))
  name String @unique

  projects Project[]
}

model News {
  id             String   @id @default(uuid(7))
  href           String
  published      DateTime
  quote          String?
  title          String
  youtubeVideoId String?
}

model Path {
  id    String  @id @default(uuid(7))
  name  String  @unique
  url   String? @unique
  order Int     @unique

  courses Course[]
}

model Course {
  id     String @id @default(uuid(7))
  name   String
  author String
  url    String @unique
  order  Int    @unique

  pathId         String
  path           Path            @relation(fields: [pathId], references: [id])

  @@unique([author, name])
}
